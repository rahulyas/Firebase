<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifty_dp"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:layout_marginStart="@dimen/twenty_dp"
        app:cardCornerRadius="@dimen/thirty_dp"
        app:cardElevation="@dimen/twenty_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/twenty_dp"
            android:background="@drawable/box_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update data"
                android:textSize="@dimen/twenty_dp"
                android:textAlignment="center"
                android:textColor="@color/purple_200"/>

            <ImageView
                android:id="@+id/updateImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_hundred"
                android:src="@drawable/ic_baseline_file_upload_24"
                android:layout_marginTop="@dimen/ten_dp"
                android:scaleType="fitXY"/>

            <EditText
                android:id="@+id/updateTopic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_dp"
                android:background="@drawable/box_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:padding="@dimen/twenty_dp"
                android:hint="Enter the topic name"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>

            <EditText
                android:id="@+id/updatedescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_dp"
                android:background="@drawable/box_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:padding="@dimen/twenty_dp"
                android:hint="Enter Description"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>

            <EditText
                android:id="@+id/updateLang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_dp"
                android:background="@drawable/box_border"
                android:layout_marginTop="@dimen/twenty_dp"
                android:padding="@dimen/twenty_dp"
                android:hint="Enter Language"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>

            <Button
                android:id="@+id/updatedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_dp"
                android:text="Updated"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                app:cornerRadius ="@dimen/twenty_dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>